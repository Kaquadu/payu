<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Contidion</th>
      <th>Sold</th>
    </tr>
  </thead>
  <tbody>
    <%= for book <- @books do %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td><%= book.condition.name %></td>
      <td><%= book.sold %></td>
    </tr>
    <% end %>
  </tbody>
</table>
